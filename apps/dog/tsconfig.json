{

  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
